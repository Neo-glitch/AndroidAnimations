<?xml version="1.0" encoding="utf-8"?>


<!--
xml file to play all the vector drawable in sequence and duration of each image is 200 millisec
and oneShot=true means the anim is done just once
-->
<animation-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:oneshot="false">

    <item android:drawable="@drawable/battery_charging_0" android:duration="200" />
    <item android:drawable="@drawable/battery_charging_1" android:duration="200" />
    <item android:drawable="@drawable/battery_charging_2" android:duration="200" />
    <item android:drawable="@drawable/battery_charging_3" android:duration="200" />
    <item android:drawable="@drawable/battery_charging_4" android:duration="200" />
    <item android:drawable="@drawable/battery_charging_5" android:duration="200" />
    <item android:drawable="@drawable/battery_charging_6" android:duration="200" />

</animation-list>